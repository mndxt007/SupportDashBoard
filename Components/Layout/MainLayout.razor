@inherits LayoutComponentBase

<FluentDialogProvider />

<FluentLayout>
    <FluentHeader>
        <div style="color:white; max-height:24px;margin-right:10px">
            <svg role="img" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
                <title>Microsoft</title>
                <path fill="white" d="M0 0v11.408h11.408V0zm12.594 0v11.408H24V0zM0 12.594V24h11.408V12.594zm12.594 0V24H24V12.594z" />
            </svg>
        </div>
        <h5 style="margin-top: 7px;">Support Engineer Dashboard</h5>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        Developer Azure Services
        <FluentSpacer />
        Powered by Blazor
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
